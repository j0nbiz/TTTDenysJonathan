<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pish.tttdenysjonathan.MainActivity"
    android:background="@color/bluegray">

    <TableLayout
        android:id="@+id/gameGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <ImageButton
                android:id="@+id/square11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:layout_column="1"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>

            <ImageButton
                android:id="@+id/square12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:layout_column="2"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>

            <ImageButton
                android:id="@+id/square13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:layout_column="3"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center">

            <ImageButton
                android:id="@+id/square21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>

            <ImageButton
                android:id="@+id/square22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>

            <ImageButton
                android:id="@+id/square23"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="3"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <ImageButton
                android:id="@+id/square31"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>

            <ImageButton
                android:id="@+id/square32"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>

            <ImageButton
                android:id="@+id/square33"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="3"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/emptysquare"
                android:onClick="tttOnClick"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/zeroButton"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:onClick="zeroAll"
            />

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/resetButton"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:onClick="resetGame"
            />

        <Button
            android:id="@+id/oneplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/oneplayer"
            android:layout_margin="5dp"
            android:onClick="startGame"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">



        <Button
            android:id="@+id/aboutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/aboutButton"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:onClick="showAbout"
            />
        <Button
            android:id="@+id/exitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/scoresButton"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:onClick="exitGame"
            />

        <Button
            android:id="@+id/multiplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/multiplayer"
            android:layout_margin="5dp"
            android:onClick="startGame"
            />
    </LinearLayout>


</LinearLayout>